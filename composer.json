{
    "name": "krve/inmobile",
    "description": "An Inmobile PHP SDK for sending text messages",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kristoffer Vestergaard",
            "email": "kristoffer@krve.io"
        }
    ],
    "require": {
        "php": "^8.0",
	    "ext-curl": "*",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Krve\\Inmobile\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
